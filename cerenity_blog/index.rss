from __future__ import generators
import cgitb; cgitb.enable()
import cgi
import time
import os

config = (__import__("config")).config
Posts = (__import__("Posts")).Posts

posts = Posts()

print """\
Content-Type: application/xml

<?xml version="1.0"?>
<rss version="2.0">
   <channel>
      <title>%s</title>
      <link>%s</link>
      <description>%s</description>
